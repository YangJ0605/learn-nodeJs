<%- include('./header.ejs') %>
<h2>新建一个评论</h2>
<form method="post" role="form">
    <div class="form-group">
        <label for="title">主题</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="请输入主题" required>
    </div>
    <div class="form-group">
        <label for="content">内容</label>
        <textarea class="form-control" id="body" name="body" placeholder="请输入文本" rows="3" required></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="提交评论" class="btn btn-primary">
    </div>
</form>
